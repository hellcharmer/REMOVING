<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_childimg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/friends_selected"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/tv_childname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ellen"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/iv_childimg"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/tv_remarktime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18:23"
            android:layout_toRightOf="@id/iv_childimg"
            android:textColor="#a9b7b7"
            android:layout_below="@+id/tv_childname"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/delete_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_remark"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textColor="#000"
        android:text="hahhahahah"/>

</LinearLayout>
